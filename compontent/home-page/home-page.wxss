.box{
  width: 100%;
}
.header{
  width: 100%;
  height: 65rpx;
  /* background: red; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.header>view:nth-of-type(1)>image{
  width: 30rpx;
  height: 15rpx;
}
.header>view:nth-of-type(1){
  width: 80rpx;
  /* background: palegoldenrod; */
  display: flex;
  font-size: 25rpx;
  justify-content: space-between;
  font-weight: bold;
  height: 100%;
  align-items: center;
}
.header>view:nth-of-type(2){
  width: 557rpx;
  height: 100%;
  background: #f4f4f4;
  border-radius: 50rpx;
}
.header>view:nth-of-type(2)>input{
  width:100%;
  height: 100%;
 font-size: 22rpx;
}
.header>view:nth-of-type(3)>image{
  width: 22rpx;
  height: 22rpx;
}
.header>view:nth-of-type(3){
  /* width: 60rpx; */
 font-size: 15rpx;
 display: flex;
 flex-direction: column;

/* compontent/home-page/home-page.wxss */
.box{
  width: 100%;
}
.header{
  width: 100%;
  height: 65rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.header>view:nth-of-type(1)>image{
  width: 30rpx;
  height: 15rpx;
}
.header>view:nth-of-type(1){
  width: 80rpx;
  /* background: palegoldenrod; */
  display: flex;
  font-size: 25rpx;
  justify-content: space-between;
  font-weight: bold;
  height: 100%;
  align-items: center;
}
.header>view:nth-of-type(2){
  width: 557rpx;
  height: 100%;
  background: #f4f4f4;
  border-radius: 50rpx;
}
.header>view:nth-of-type(2)>input{
  width:100%;
  height: 100%;
 font-size: 22rpx;
 padding-left: 163rpx;
 box-sizing: border-box;
}
.header>view:nth-of-type(3)>image{
  width: 36rpx;
  height:36rpx;
}
.header>view:nth-of-type(3){
 font-size: 17rpx;
 display: flex;
 flex-direction: column;
 /* background: papayawhip */
}
.search{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 9rpx;
  left: 246rpx;
}
.search>image{
  width: 100%;
  height: 100%;
}
.section{
  width: 100%;
  /* height: 500rpx; */
  /* background: red; */
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.section>view{
  width: 20%;
  height: 140rpx;
  /* border: 1px solid teal; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.section>.logo_a>image{
 width: 80rpx;
 height: 80rpx;
}
.section>view>text{
 font-size: 25rpx;
}
.logo{
  width: 90rpx;
  height: 61rpx;
}
.nav{
  width: 100%;
  height: 130rpx;
  /* background: red; */
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.nav>view{
  width: 48%;
  height: 100%;
  border: 1rpx solid #EDEDED; 
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-radius: 5rpx;
  font-size: 30rpx;
  font-weight: bold;
  justify-content: center;
  box-shadow: 0px 0px 8px #EDEDED inset;
}
.nav>view>image{
  width: 60rpx;
  height:60rpx;
  margin-right: 10rpx;
}
.question{
  width: 100%;
  height: 140rpx;
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.question>image{
  width: 100%;
  height: 100%;
}
.like{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left:20rpx;
  font-size: 25rpx;
  color: #AAAAAA;
}
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
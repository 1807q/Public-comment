/* compontent/Nearbyshops/Nearbyshops.wxss */

.Nearbyshops {
  width: 100%;
  height: 1206rpx;
  background: #f0f0f0;
}

.header {
  width: 100%;
  height: 100rpx;
  background: white;
  border-bottom: 2rpx solid #dfdfdf;
  display: flex;
}

.header>view:nth-of-type(1) {
  width: 50%;
  height: 100%;
  border-right: 4rpx solid #f0f0f0;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

.header>view:nth-of-type(1)>image {
  width: 29rpx;
  height: 19rpx;
}

.header>view:nth-of-type(2) {
  width: 49%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}

.header>view:nth-of-type(2)>image {
  width: 29rpx;
  height: 19rpx;
}

/* compontent/detail/detail.wxss */

.box {
  width: 100%;
}

.logo {
  width: 100%;
  height: 220rpx;
  background: white;
  border: 1px solid #eee;
  box-sizing: border-box;
  display: flex;
  padding: 20rpx 20rpx;
  justify-content: space-between;
}

.logo>view:nth-of-type(1) {
  width: 180rpx;
  height: 180rpx;
}

.logo>view:nth-of-type(1)>image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.right {
  width: 500rpx;
  height: 100%;
  /* background: yellow; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right>view:nth-of-type(1) {
  font-weight: bold;
  font-size: 35rpx;
}

.right>view:nth-of-type(2) {
  display: flex;
  align-items: center;
}

.right>view:nth-of-type(2)>view:nth-of-type(1)>image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.right>view:nth-of-type(3) {
  font-size: 25rpx;
  color: #898989;
}
.right>view:nth-of-type(3)>text{
  margin-left: 300rpx;
}
.right>view:nth-of-type(4){
  height: 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.right>view:nth-of-type(4)>view{
  width: 100rpx;
  height: 100%;
  border: 2rpx solid #898989;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  color: #898989;
}